{
  "functions": {
    "api/**/*.py": {
      "runtime": "@vercel/python@3.1.10"
    }
  },
  "buildCommand": "cd frontend && npm ci && npm run build",
  "outputDirectory": "frontend/dist",
  "rewrites": [
    { "source": "/api/(.*)", "destination": "/api/$1" },
    { "source": "/(.*)", "destination": "/" }
  ]
}